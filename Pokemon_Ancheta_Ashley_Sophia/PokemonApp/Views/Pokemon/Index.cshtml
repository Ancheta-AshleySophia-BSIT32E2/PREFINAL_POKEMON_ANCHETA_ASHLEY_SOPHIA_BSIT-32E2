@model PokemonApp.Models.Pokemon

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f4f8; /* Light grey background */
            color: #333; /* Dark grey text */
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            margin: 0;
        }

        .pokemon-container {
            background-color: #ffffff; /* White container */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            border-radius: 15px;
            padding: 20px;
            max-width: 600px;
            text-align: center;
            transition: transform 0.3s;
        }

            .pokemon-container:hover {
                transform: scale(1.05);
            }

        .pokemon-image {
            width: 200px;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .pokemon-details {
            margin-top: 20px;
        }

        .abilities, .moves {
            list-style-type: none;
            padding: 0;
        }

            .abilities li, .moves li {
                background-color: #e3f2fd; /* Light blue for list items */
                border: 1px solid #90caf9; /* Blue border */
                border-radius: 5px;
                margin: 5px 0;
                padding: 10px;
                transition: background-color 0.3s, transform 0.3s;
            }

                .abilities li:hover, .moves li:hover {
                    background-color: #bbdefb; /* Darker blue on hover */
                    transform: scale(1.05);
                }

        h1 {
            color: #0277bd; /* Blue */
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        h2 {
            color: #0288d1; /* Light blue */
            font-size: 1.5em;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="pokemon-container">
        <h1>@Model.Name</h1>
        <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/252.png" alt="@Model.Name" class="pokemon-image" />
        <div class="pokemon-details">
            <h2>Abilities</h2>
            <ul class="abilities">
                @foreach (var ability in Model.Abilities)
                {
                    <li>@ability.Ability.Name</li>
                }
            </ul>
            <h2>Moves</h2>
            <ul class="moves">
                @foreach (var move in Model.Moves)
                {
                    <li>@move.Move.Name</li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
